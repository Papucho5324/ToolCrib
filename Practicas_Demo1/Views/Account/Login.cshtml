@{
    ViewData["Title"] = "Ingresar";

    ViewData["MostrarHeader"] = false;
    ViewData["MostartMenu"] = false;



}


<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 m-auto">

            <div class="login-container">
                <div class="login-form">
                    <div class="brand">
                        <img src="~/images/Inventec.svg" width="150px" class="p-0" />

                    </div>

                    <h1 class="welcome-title">Bienvenido!</h1>
                    <p class="welcome-subtitle">Por favor ingresa tu numero de reloj y contrasena</p>

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="form-group">
                            <input type="text" name="badgeNumber" class="form-control" placeholder="Numero de Reloj">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>



                        <div class="forgot-password">
                            <p>Si olvidadste tu contrasena contacta al departamento de FIS</p>
                        </div>

                        <button type="submit" class="btn btn-primary  signin-btn">Ingresar</button>
                        <div class="boss">
                            <a asp-action="Login" asp-controller="Employee">Volver? clic aqui</a>
                        </div>



                    </form>
                </div>

                <div class="login-image">
                    <img src="~/images/hero.jpg" class="img-fluid " />
                    <div class="feature-content m-3 mt-5">
                        <h2 class="feature-title">Tool Crib</h2>
                        <p class="feature-subtitle">Solicita solo lo necesario, cuida lo que es de todos.</p>


                    </div>



                </div>
            </div>
        </div>

    </div>



</div>
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

@section Scripts {
    <script>



        $(document).ready(function() {
            $('.password-toggle').click(function() {
                const passwordField = $(this).siblings('input');
                const icon = $(this).find('i');

                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                }
            });
        });
    </script>
}